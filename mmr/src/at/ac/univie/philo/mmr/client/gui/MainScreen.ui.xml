<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:m="urn:import:at.ac.univie.philo.mmr.client.gui">
	
	<ui:style type="at.ac.univie.philo.mmr.client.gui.MainScreen.DetailStyle">
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
		.headerbox {
			background-color: skyblue;
			border: '0px';
			border-color: red;
		}
		
		.header {
			vertical-align: middle;
			font-size: large;
		}
		
		.navibox {
			background-color:#FFFFCC;
			border: 0px;
			border-color: #000000;
		}
		
		.statusbox {
			background-color: lightgray;
			font-weight: bold;
			text-align:center;
			letter-spacing:0.20em;
		}
		
		.mainbox {
			background-color: #c0c0c0;
		}
		
		.addBorder {
			border: '5px';
			border-color: #ff0000;
		}
		
		.alignElements div {
			text-align: left;
		}
		
		.alignElements {
			text-align:left;
		}
		
		.beta {
			vertical-align:super;
			color:red;
			font-size: small;
			font-weight: bold;
		}
		
	</ui:style>
	
	<ui:with field='res' type='at.ac.univie.philo.mmr.client.gui.Resources'/>
			<g:DockLayoutPanel ui:field="overallDockPanel" width="1024px" height="768px" unit="PX">
			<g:north size="70">
				<g:HorizontalPanel ui:field="headerHorizonalPanel" styleName="{style.headerbox}" borderWidth="1" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:HTML styleName="{style.header}" horizontalAlignment="ALIGN_CENTER"><div>Mit M&oslash;eglichkeiten rechnen <span class='{style.beta}'>B&#x2203;T&#x2200;</span></div></g:HTML>
						<g:HTMLPanel ui:field="quickEvalContainer">
	    					<table align="center">
	      						<tr>
							        <td colspan="4" style="font-weight:bold;">Evaluate a modal logic expression:</td>        
							    </tr>
							    <tr>
							    	<td id="worldBoxContainer"></td>
							        <td id="nameFieldContainer"></td>
							        <td id="sendButtonContainer"></td>
							        <td id="helpButtonContainer"></td>
							    </tr>
							    <tr>
							        <td colspan="2" style="color:red;" id="errorLabelContainer"></td>
							    </tr>
							</table>
	    					
					 </g:HTMLPanel>
				</g:HorizontalPanel>
			</g:north>
			<g:south size="20">
				<g:HTMLPanel ui:field="statusHtmlPanel">
					<div class='{style.statusbox}'>Version: <span ui:field="version">unknown</span> ### Institut für Computersprachen, TU Wien ### Institut für Philosophie, Universität Wien</div>
  				</g:HTMLPanel>
			</g:south>

			<g:west size="250.0">
				<g:ScrollPanel styleName="{style.navibox}" ui:field="navigationTreeScrollPanel">
				<g:VerticalPanel ui:field="navigationVerticalPanel" borderWidth="1" horizontalAlignment="ALIGN_CENTER">				
						<p1:CellTree ui:field="cellTree"/>
					 <!--  ToolBox (AddButton) -->
					<g:HorizontalPanel ui:field="navigationHorizontalButtonPanel">
					</g:HorizontalPanel>
				</g:VerticalPanel>
				</g:ScrollPanel>
			</g:west>
			<g:center size="800">
				<g:ScrollPanel ui:field="mainScrollPanel">
				<g:VerticalPanel ui:field="mainPanel">
					<g:SimplePanel ui:field="simplePanelForParserPanel" styleName="{style.mainbox}" >
					<g:HTMLPanel ui:field="parserContainer">
	    					<div>Hier kommt die Hauptseite mit Quick-Functions</div>					
					 </g:HTMLPanel>
					 </g:SimplePanel>
				</g:VerticalPanel>
				</g:ScrollPanel>
			</g:center>
		</g:DockLayoutPanel>		

</ui:UiBinder> 